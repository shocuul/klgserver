	<body layout="row" ng-controller="NavCtrl">
		<md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')">
		<md-toolbar layout="row" layout-align="center center">
			<a href="#"> <img class="logo" src="/images/logo.png" alt="" /></a>
		</md-toolbar>
		<div layout="column" class="md-toolbar-tools-bottom inset">
			<img src="http://www.gravatar.com/205e460b479e2e5b48aec07710c08d50">
			<span></span>
			<div>Nombre</div>
			<div>Email</div>
		</div>
		<md-list>
			<md-item ng-repeat="menu in menuItems">
				<a>
					<md-item-content md-ink-ripple layout="row" layout-align="start center">
						<div class="inset">
							<ng-md-icon icon="{{menu.icon}}" style="fill:gray;"></ng-md-icon>
						</div>
						<div class="inset">
							{{menu.name}}
						</div>
					</md-item-content>
				</a>
			</md-item>
		</md-list>
		<!--<md-divider></md-divider>
      	<md-subheader>Management</md-subheader>-->
		</md-sidenav>
		<%- body %>
