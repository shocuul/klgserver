		<script src="/admin/js/dependencies/angular-material.min.js"></script>
		<script src="/admin/js/app.js"></script>
		<script src="/admin/js/Navigation/NavigationController.js"></script>
		<script src="/admin/js/Navigation/NavigationService.js"></script>
		<script src="/admin/js/routes.js"></script>
		<!--SCRIPTS_ADMIN END-->
				<script src="//cdnjs.cloudflare.com/ajax/libs/angular-material-icons/0.6.0/angular-material-icons.min.js"></script>
